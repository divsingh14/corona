<%- include('includes/head.ejs');%>
<body>
    <main>
        <%- include('includes/navigation.ejs');%>
        <div class="container">
            <h4 class="center">Total Cases</h4>
            <div class="row center">
                <div class="col s6 m3">
                    <div class="card blue-grey darken-1 z-depth-5 ">
                        <div class="card-content white-text">
                            <span class="card-title">Confirmed</span>
                            <%let confirmed =(totalDetail.confirmed)?totalDetail.confirmed : "No Data" %>
                            <h6><%=confirmed%></h6>
                        </div>
                    </div>
                </div>
                <div class="col s6 m3">
                    <div class="card blue-grey darken-1 z-depth-5">
                        <div class="card-content white-text">
                            <span class="card-title">Recovered</span>
                            <%let recovered = (totalDetail.recovered)?totalDetail.recovered:"No Data"%>
                            <h6><%=recovered%></h6>
                        </div>
                    </div>
                </div>
                <div class="col s6 m3">
                    <div class="card blue-grey darken-1 z-depth-5">
                        <div class="card-content white-text">
                            <span class="card-title">Critical</span>
                            <%let critical = (totalDetail.critical)?totalDetail.critical:"No Data"%>
                            <h6><%=critical%></h6>
                        </div>
                    </div>
                </div>
                <div class="col s6 m3">
                    <div class="card blue-grey darken-1 z-depth-5">
                        <div class="card-content white-text">
                            <span class="card-title">Deaths</span>
                            <%let deaths = (totalDetail.deaths)?totalDetail.deaths:"No Data"%>
                            <h6><%=deaths%></h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>

<%- include('includes/footer.ejs');%>