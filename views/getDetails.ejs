<%- include('includes/head.ejs');%>
<body>
    <main>
        <%- include('includes/navigation.ejs');%>
        <div class="container">
            <div class="row">
                <div class="col s6">
                    <h4><%=countryName%></h4>
                </div>
                <div class="col s6 ">
                    <p class="right"><%=`Date : ${todayDate}`%></p>
                </div>
            </div>
            <div class="row">
                <h6>Cases</h6>
                <div class="col s6 m3">
                    <div class="card blue-grey darken-1 z-depth-5 ">
                        <div class="card-content white-text">
                            <span class="card-title">New Cases</span>
                            <% let casesNew =(cases.new)?cases.new:0; %>
                            <%=casesNew%>
                        </div>
                    </div>
                </div>
                <div class="col s6 m3">
                    <div class="card blue-grey darken-1 z-depth-5">
                        <div class="card-content white-text">
                            <span class="card-title">Active</span>
                            <% let casesActive =(cases.active)?cases.active:0; %>
                            <%=casesActive%>
                        </div>
                    </div>
                </div>
                <div class="col s6 m3">
                    <div class="card blue-grey darken-1 z-depth-5">
                        <div class="card-content white-text">
                            <span class="card-title">Recoverd</span>
                            <% let casesRecovered =(cases.recovered)?cases.recovered:0; %>
                            <%=casesRecovered%>
                        </div>
                    </div>
                </div>
                <div class="col s6 m3">
                    <div class="card blue-grey darken-1 z-depth-5">
                        <div class="card-content white-text">
                            <span class="card-title">Total</span>
                            <% let casesTotal =(cases.total)?cases.total:0; %>
                            <%=casesTotal%>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col s6">
                    <h6>Deaths</h6>
                    <div class="row">
                        <div class="col s6 m6">
                            <div class="card blue-grey darken-1 z-depth-5 ">
                                <div class="card-content white-text">
                                    <span class="card-title">New Deaths</span>
                                    <i className="material-icons"></i>
                                    <% let newDeath =(deaths.new)?deaths.new:0; %>
                                    <%=newDeath%>
                                </div>
                            </div>
                        </div>
                        <div class="col s6 m6">
                            <div class="card blue-grey darken-1 z-depth-5">
                                <div class="card-content white-text">
                                    <span class="card-title">Total</span>
                                    <% let totalDeath =(deaths.total)?deaths.total:0; %>
                                    <%=totalDeath%>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col s6">
                    <div class="row">
                        <h6>Tests</h6>
                        <div class="col s12 m12">
                            <div class="card blue-grey darken-1 z-depth-5">
                                <div class="card-content white-text">
                                    <span class="card-title">Total</span>
                                    <% let total =(tests.total)?tests.total:0; %>
                                    <%=total%>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
<%- include('includes/footer.ejs');%>